{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with person}}

    <div>
      <h1>{{name}}</h1>
      <h3>Age: {{age}}</h3>
      <h3>Gender: {{gender}}</h3>
      {{#with address}}
        <address>
          Address:
          {{street}},
          {{city}},
          {{state}},
          {{zip}},
          {{country}}
        </address>
      {{/with}}
    </div>

    <br />
    <hr />

    <div>
      <section>
        <h2>Education</h2>
        <div>
          {{#each education}}
            <p>Degree: {{degree}}</p>
            <p>Major: {{major}}</p>
            <p>University:{{university}}</p>
            <p>GraduationYear: {{graduationYear}}</p>
          {{/each}}
        </div>
      </section>
    </div>
    <br />
    <hr />

    <div>
      <section>
        <h2>WorkExperience</h2>
        <div>
          {{#each workExperience}}
            <h3>Company: {{company}}</h3>
            <h4>{{title}}</h4>
            <p>StartDate: {{startDate}}</p>
            <p>EndDate: {{endDate}}</p>

            <h4>Responsibilities:</h4>
            <ul>
              <li>Developed new features for Google Maps</li>
              <li>Worked on improving search algorithms</li>
            </ul>
            <h4>Company Details:</h4>
            <p> Year founded: {{year_founded}}</p>
            <p> Industry: {{industry}}</p>

            <h4>Employees:</h4>
            {{#each employees}}
              <h4> Name: {{name}}</h4>
              <p> Position: {{position}}</p>
              <p> Department: {{department}}</p>
              <h4> Projects:</h4>
              <div>
                {{#each projects}}
                  <h4>{{name}}</h4>
                  <p>{{description}}</p>
                  <p>{{status}}</p>
                  <div>
                    {{#each teams}}
                      <h3>
                        {{team_name}}
                      </h3>
                      {{#with team_leader}}
                        <h4>{{name}}</h4>
                        <p>{{title}}</p>
                        <p>{{email}}</p>
                      {{/with}}
                      {{#each team_members}}
                        <h4>{{name}}</h4>
                        <p>{{title}}</p>
                        <p>{{email}}</p>
                        <br />
                        <h3>Skills:</h3>
                        <ul>
                          <li>{{skills}}</li>
                        </ul>
                        <br />
                        <h3>Projects</h3>
                        {{#each projects}}
                          <h4>{{name}}</h4>
                          <p>{{description}}</p>
                          <h4>Technologies</h4>
                          <ul>
                            <li>
                              Java
                            </li>
                            <li>Spring Framework</li>
                          </ul>
                          <h5>Team members:</h5>
                          {{#each team_members}}
                            <h4>{{name}}</h4>
                            <p>{{title}}</p>
                            <br />
                          {{/each}}
                        {{/each}}

                      {{/each}}

                    {{/each}}
                  </div>
                {{/each}}

              </div>

            {{/each}}

          {{/each}}
        </div>
      </section>
    </div>

  {{/with}}
</div>
