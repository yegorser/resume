<div>
  <div class='card' >
    <br>
   
    {{#with heading}}
      {{#with main}}
      <div class='card'>
        <h1>{{title}}</h1>
        <p>{{text}}</p>
        {{#with button_text}}
          <div><button class="btn btn-primary">{{solid}}</button></div>
          <br />
          <br />
          <div><button class="btn btn-outline-info">{{outline}}</button></div>
           <br>
        {{/with}}
        </div>
      {{/with}}
      
      <br />
      <br />
      {{#with second}}
      <div class='card'>
        <h2>{{title}}</h2>
        <p>{{text}}</p>
        {{#with button_text}}
          <div><button class="btn btn-secondary">{{solid}}</button></div>
          <br />
          <br />
          <div><button class="btn btn-outline-secondary">{{outline}}</button></div>
          <br>
        {{/with}}
        </div>
      {{/with}}

      <br />
      <br />
      {{#with subblock}}
      <div class='card'>
        <h3>{{title}}</h3>
        <p>{{text}}</p>
        {{#with button_text}}
          <div><button class="btn btn-dark">{{solid}}</button></div>
          <br />
          <br />
          <div><button class="btn btn-outline-dark">{{outline}}</button></div>
          <br>
        {{/with}}
        </div>
      {{/with}}
    {{/with}}

<br />
<br />
    </div>

    {{#with nested_display}}
      <div class='card'>
        <div class='card-body'>
      <div class='display-1'>{{title}}</div>
      {{#with children_display}}
        <div class='card'>
          <div class='card-body'>
            <div class='display-4'>{{title}}
            </div>
            <p>{{text}}</p>
            {{#with button}}
              <div><button
                  class='btn btn-outline-warning'
                >{{text}}</button>
              </div>
            {{/with}}
          </div>
        </div>
      {{/with}}
        <br>
        
        <h6>Sections</h6>
        
        {{#with button}}
          <div>
        <button class="btn btn-info">
          {{text}}
        </button>
        </div>
        {{/with}}
        <br>
        {{/with}}
  </div>
</div>
<br>
<br>

<div>
  <div class="card">
    <div class="card-body">
      {{#with paragraph}}
      <p class="text-uppercase">{{title}}</p>
      <p class="text-lowercase">{{text}}</p>
        {{#with button}}
          <a class="btn btn-link" href='https://google.com'>{{text}}</a>
          <br>
          <br>
        {{/with}}
        <div class="card">
            <div class="card-body">
          {{#each list_name}}
          <ul>
            <li>
              <a class="btn btn-link" href={{url}}>{{text}}</a>
            </li>
          </ul>    
          {{/each}}
          </div>
          </div>
      {{/with}}
    </div>
  </div>
</div>